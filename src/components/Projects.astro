---
import GitHub from "./icons/GitHub.astro";
import React from "./icons/React.astro";
import Firebase from "./icons/Firebase.astro";
import Bootstrap from "./icons/Bootstrap.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";

const TAGS = {
  REACT: {
    name: "React",
    class: "bg-[#087ea4] text-white",
    icon: React,
  },
  BOOTSTRAP: {
    name: "Bootstrap",
    class: "bg-[#a44ef5] text-white",
    icon: Bootstrap,
  },
  FIREBASE: {
    name: "Firebase",
    class: "bg-[#a88003] text-white",
    icon: Firebase,
  },
};
const PROJECTS = [
  {
    title: "Génesis - Sistema de gestión de alumnos",
    description:
      "Sistema personalizado para Institutos de Capacitación, que gestiona datos de alumnos, pagos y certificados, con seguimiento completo de cada estudiante. Incluye roles de administrador, franquicias y profesores, y permite controlar ingresos y egresos de cada sucursal. Desarrollado con React, Bootstrap y Firebase.",
    link: "https://genesis.net.ar/",
    github: "https://github.com/juangramajo-dev",
    image: "/projects/genesis_11zon.webp",
    tags: [TAGS.REACT, TAGS.BOOTSTRAP, TAGS.FIREBASE],
  },
];
---

<div class="flex flex-col mx-auto gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col mx-8 space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt="Sistema de gestión de alumnos"
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-5" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
